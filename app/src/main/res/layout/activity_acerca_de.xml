<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.protopo.previewplace.acerca_de">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView3"
                android:src="@mipmap/icono"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PreviewPlace"
                android:id="@+id/textView20"
                android:textSize="35dp"
                android:singleLine="false"
                android:fontFamily="@string/abc_searchview_description_clear"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Acerca de PreviwPlace"
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:layout_marginTop="38dp"
                android:layout_below="@+id/textView20"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <android.support.v4.view.ViewPager
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:id="@+id/view6"
                android:background="@color/CadetBlue"
                android:layout_below="@+id/textView14"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView15"
                android:text="@string/label_acerca_pplace"
                android:textSize="16dp"
                android:layout_below="@+id/view6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Como surge PreviwPlace"
                android:id="@+id/textView16"
                android:textSize="20dp"
                android:layout_below="@+id/textView15"
                android:layout_marginTop="28dp"
                android:layout_alignRight="@+id/textView20"
                android:layout_alignEnd="@+id/textView20"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:id="@+id/scrollView4"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView16"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView17"
                    android:text="@string/label_acerca_pplace"
                    android:textSize="16dp" />
            </ScrollView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
